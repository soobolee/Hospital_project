   .slide_notice { width: 80%; height: 100%; max-width: 360px; background: #fff; position: fixed; top: 0; right: 0; overflow-y: scroll; z-index: 9999; display: none; } 
   .slide_notice .menu_close { width: 100%; height: 52px; background: #a9cbd7; position: relative; } 
   .slide_notice .btn_menu_close { background: none; border: 0; font-size: 15px; color: #fff; position: absolute; top: 15px; right: 15px; cursor: pointer; } 
